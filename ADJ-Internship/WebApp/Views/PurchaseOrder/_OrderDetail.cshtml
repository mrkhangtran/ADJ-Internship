@model ADJ.BusinessService.Dtos.OrderDTO;

<button type="button" value="AddItem" name="method" class="uk-button uk-button-primary itemButton">Add Item</button>

@if (Model.PODetails != null)
{
  @if (Model.PODetails.Items != null)
  {
    //List could be not null but does not have any item
    @if (Model.PODetails.Items.Count > 0)
    {
      <span>Page:</span>
      int totalPage = Model.PODetails.Items.Count / ViewBag.PageSize;
      @if (Model.PODetails.Items.Count % ViewBag.PageSize > 0) { totalPage++; }

      @if (ViewBag.CurrentPage > 1)
      {
        <button type="button" value="Previous" class="uk-button uk-button-secondary itemButton">Previous</button>
      }

      @for (int i = 1; i <= totalPage; i++)
      {
        if (i == ViewBag.CurrentPage)
        {
          <button type="button" value="Page @i" class="uk-button uk-button-secondary itemButton" disabled><span id="currentPage">@i</span></button>
        }
        else
        {
          <button type="button" value="Page @i" class="uk-button uk-button-secondary itemButton">@i</button>
        }
      }

      @if (ViewBag.CurrentPage < totalPage)
      {
        <button type="button" value="Next" class="uk-button uk-button-secondary itemButton">Next</button>
      }
    }
  }
}

